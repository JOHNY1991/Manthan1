<script>
    $(document).ready(function() {
        $('#participants').dataTable({
        });
        $('a[data-remote]').live('ajax:success', function(evt, data) {
            $('#'+'accept_'+data['id']).html(data['message']);
        });
    } );

</script>



  <table id="participants" cellpadding="0" cellspacing="0" border="0" class="table table-bordered">
   <thead>
    <tr>
    <th>Pid</th>
    <th>College</th>
    <th>Fname</th>
    <th>Lname</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Age</th>
    <th>Gender</th>
    <th>Bcity</th>
    <th>Teligible</th>

    <th>Status</th>
  </tr>
   </thead>
    <tbody>
<% @participants.each do |participant| %>
  <tr>
    <td><%= participant.pid %></td>
    <td><%= participant.college %></td>
    <td><%= participant.fname %></td>
    <td><%= participant.lname %></td>
    <td><%= participant.email %></td>
    <td><%= participant.phone %></td>
    <td><%= participant.age %></td>
    <td><%= participant.gender %></td>
    <td><%= participant.bcity %></td>
    <td><%= participant.teligible %></td>
    <%if participant.entry? then%>
        <td>Already Registered</td>
        <% else %>
    <td id="accept_<%=participant.pid%>" ><%= link_to 'Accept', {:action => 'enter',:part_id => participant.id},:remote => TRUE, :disable_with => 'Please wait...',:'data-update-target' => 'update-container' %></td>
    <% end %>
    </tr>
<% end %>
    </tbody>
</table>

<br />

<%= link_to 'New Participant', new_participant_path %>
